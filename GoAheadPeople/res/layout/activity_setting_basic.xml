<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.raafstudio.goahead.people"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_default" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp" >

            <com.raaf.custom.CircleImageView
                android:id="@+id/ImgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:border_color="@color/grey"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/TvChangeAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="10dp"
                android:text="CHANGE"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_body"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/grey_700" />

            <EditText
                android:id="@+id/EtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/default_value"
                android:textColor="@color/white"
                android:textSize="@dimen/text_subhead" >
            </EditText>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Occupation"
                android:textColor="@color/grey_700" />

            <EditText
                android:id="@+id/EtUserOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/default_value" >
            </EditText>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Location"
                android:textColor="@color/grey_700" />

            <EditText
                android:id="@+id/EtUserLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/default_value" >
            </EditText>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="About Me"
                android:textColor="@color/grey_700" />

            <EditText
                android:id="@+id/EtUserAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:ems="10"
                android:inputType="textMultiLine"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/default_value" >

            </EditText>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_700" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/BtSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_red"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_subhead"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>