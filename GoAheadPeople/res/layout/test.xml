<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="16dp" >

        <com.raafstudio.goahead.people.component.ImageviewNormal
            android:id="@+id/ImgArtwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/ImgArtPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_plus" />

        <ImageView
            android:id="@+id/ImgArtFrameBasic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/btn_art_graph_on"
            android:src="@drawable/ic_btn_frame_basic_off" />

        <ImageView
            android:id="@+id/ImgArtFrameCustom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_frame_custom_off" />

        <ImageView
            android:id="@+id/ImgArtFrameCrop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_frame_crop_off" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:id="@+id/LayoutArtGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>