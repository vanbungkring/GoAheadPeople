<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.raafstudio.goahead.people"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp" >

    <TextView
        android:id="@+id/TvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Avatar Source"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="@dimen/text_headline"
        android:textStyle="bold" />

    <com.raafstudio.goahead.people.component.CircleImageView
        android:id="@+id/ImgAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar"
        android:visibility="gone"
        app:border_color="@color/black"
        app:border_width="2dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/BtApplyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_red"
        android:text="APPLY"
        android:textColor="@color/white"
        android:textSize="@dimen/text_subhead"
        android:visibility="gone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImgCaptureCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:src="@drawable/ic_camera" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ImgCaptureFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:src="@drawable/ic_fileimage" />

    </LinearLayout>

</LinearLayout>