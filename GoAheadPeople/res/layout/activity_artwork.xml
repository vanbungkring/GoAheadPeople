<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_default" />

    <TabHost
        android:id="@+id/TabHost01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- TabWidget used to creat tabs -->

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_900"
                android:divider="@color/grey_900" >

            </TabWidget>
            <!-- container of tabs -->

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <!-- tab N°1 -->
                <!-- Inclusion of the interface -->

                <include
                    android:id="@+id/onglet1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    layout="@layout/activity_artwork_layout" >
                </include>
                <!-- tab N°2 -->
                <!-- Inclusion of the interface -->

                <include
                    android:id="@+id/Onglet2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/activity_artwork_graphic" >
                </include>
                <!-- tab N°3 -->
                <!-- Inclusion of the interface -->

                <include
                    android:id="@+id/Onglet3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/activity_artwork_frame" >
                </include>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/BtSearchArtworks"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/button_tab"
            android:focusableInTouchMode="true"
            android:text="ARTWORK"
            android:textColor="@color/white"
            android:textSize="@dimen/text_caption" />

        <Button
            android:id="@+id/BtSearchProducts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/button_tab"
            android:focusableInTouchMode="true"
            android:text="PRODUCT"
            android:textColor="@color/white"
            android:textSize="@dimen/text_caption" />

        <Button
            android:id="@+id/BtSearchUser"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/button_tab"
            android:focusableInTouchMode="true"
            android:text="USER"
            android:textColor="@color/white"
            android:textSize="@dimen/text_caption" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </RelativeLayout>

</LinearLayout>