<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.raafstudio.goahead.people.component.ImageviewNormal
            android:id="@+id/ImgArtwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LayoutArtGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ImgArtGraph1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_plus" />

        <ImageView
            android:id="@+id/ImgArtGraph2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/btn_art_graph_on"
            android:src="@drawable/ic_btn_pattern_off" />

        <ImageView
            android:id="@+id/ImgArtGraph3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_body_off" />

        <ImageView
            android:id="@+id/ImgArtGraph4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_shape_off" />

        <ImageView
            android:id="@+id/ImgArtGraph5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/btn_art_graph_off"
            android:src="@drawable/ic_btn_pattern_off" />
    </LinearLayout>

</LinearLayout>