<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.raafstudio.goahead.people"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/SearchToolbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:paddingRight="16dp"
        app:navigationIcon="@drawable/ic_back_button" >

        <EditText
            android:id="@+id/SearchEt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:ems="10"
            android:hint="Search"
            android:inputType="text" >

            <requestFocus />
        </EditText>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/BtSearchArtworks"
                style="android:buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/button_tab"
                android:focusableInTouchMode="true"
                android:text="ARTWORK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_caption" />

            <Button
                android:id="@+id/BtSearchProducts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/button_tab"
                android:focusableInTouchMode="true"
                android:text="PRODUCT"
                android:textColor="@color/white"
                android:textSize="@dimen/text_caption" />

            <Button
                android:id="@+id/BtSearchUser"
                style="android:buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@drawable/button_tab"
                android:focusableInTouchMode="true"
                android:text="USER"
                android:textColor="@color/white"
                android:textSize="@dimen/text_caption" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>