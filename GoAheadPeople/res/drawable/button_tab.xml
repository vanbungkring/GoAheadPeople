<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/black" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="@color/black" />
                </shape></item>
        </layer-list></item>
    <item android:state_focused="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/red" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="@color/grey_950" />
                </shape></item>
        </layer-list></item>
    <item android:state_enabled="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/grey_950" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="@color/grey_950" />
                </shape></item>
        </layer-list></item>

</selector>